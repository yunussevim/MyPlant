<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/vp_header"
        android:layout_width="315dp"
        android:layout_height="66dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="46dp"
        android:fontFamily="@font/roboto_family"
        android:lineHeight="33dp"
        android:text="@string/onboarding_header_second"
        android:textAlignment="viewStart"
        android:textColor="#13231B"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/vp_brush"
        android:layout_width="136dp"
        android:layout_height="13dp"
        android:src="@drawable/brush_1"
        android:layout_marginTop="34dp"
        android:layout_marginStart="180dp"
        app:layout_constraintTop_toTopOf="@+id/vp_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/vp_header" />

</androidx.constraintlayout.widget.ConstraintLayout>